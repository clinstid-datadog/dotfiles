[alias]
	review = "!f() { \
              if [ $# -eq 0 ]; then \
                  echo 'git review expects one argument (a branch name)'; \
                  exit 1; \
              else \
                  if git show-ref --verify --quiet \"refs/heads/$1\"; then \
                      git fetch origin \"$1\" && \
                      git checkout \"$1\" && \
                      git merge --ff-only \"origin/$1\"; \
                  else \
                      git fetch origin \"$1:$1\" && \
                      git checkout \"$1\"; \
                  fi; \
              fi; \
          }; f"


{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "diagnostic.checkCurrentLine": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  "pyright.enable": true,
  "suggest.noselect": true,
  "inlayHint.enable": false,
  "go.goplsOptions": {
    "directoryFilters": [
      "-**/node_modules",
      "-bazel-bin",
      "-bazel-out",
      "-bazel-dd-source",
      "-bazel-testlogs",
      "-bazel-dd-go"
    ]
  }
}
